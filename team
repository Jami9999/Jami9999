#include <iostream>
#include <cstring>
#include <cmath>
using namespace std ;

int f (int t) {
            int c = 0 ;
            while (t --) {
                        int x , y ;
                        cin >> x >> y ;
                        if ((x + y) >= 1) {
                                    c ++ ;
                        }
            }
            cout << c << "\n" ;
            return t ;
}

int main () {
            int t ;
            cin >> t ;
            f (t) ;
            return 0 ;        
}
