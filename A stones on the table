1
#include <iostream>
#include <cstring>
#include <cmath>
using namespace std ;

int f (int n , string s []) {
            int c = 0 ;
            for (int i = 0 ; i < n ; i ++) {
                        if (s [i] == s [i + 1]) {
                                    c ++ ;    
                        }
            }
            cout << c << "\n" ;
            return 1 ;
}

int main () {
            int n ;
            cin >> n ;
            string s [n] ;
            for (int i = 0 ; i < n ; i ++) {
                        cin >> s [i] ;
            }
            f (n , s) ;
            return 0 ;
}

2
#include <iostream>
#include <cstring>
#include <cmath>
using namespace std ;

int f (int n , string s) {
            int c = 0 ;
            for (int i = 0 ; i < n ; i ++) {
                        if (s [i] == s [i + 1]) {
                                    c ++ ;    
                        }
            }
            cout << c << "\n" ;
            return 1 ;
}

int main () {
            int n ;
            cin >> n ;
            string s ;
            cin >> s ;
            f (n , s) ;
            return 0 ;
}


