#include <iostream>
#include <cstring>
#include <cmath>
using namespace std ;

int f (int n) {
            if (n == 47) {
                        cout << "YES" << "\n" ;
            } else if (n == 74) {
                        cout << "YES" << "\n" ;
            } else if (n == 47 && n % 4 == 0) {
                        cout << "YES" << "\n" ;
            } else if (n == 47 && n % 7 == 0) {
                        cout << "YES" << "\n" ;
            } else if (n == 74 && n % 4 == 0) {
                        cout << "YES" << "\n" ;
            } else if (n == 47 && n % 47 == 0) {
                        cout << "YES" << "\n" ;
            } else if (n == 74 && n % 47 == 0) {
                        cout << "YES" << "\n" ;
            } else {
                        cout << "NO" << "\n" ;
            }
            return 1 ;
}

int main () {
            int n ;
            cin >> n ;
            f (n) ;
            return 0 ;
}
