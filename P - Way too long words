#include <iostream>
#include <cstring>
#include <cmath>
using namespace std ;

int f (int t) {
            while (t --) {
                        string s ;
                        cin >> s ;
                        for (int i = 0 ; i < s.length () ; i ++) {
                                    if(s.length () < 10) {
                                                cout << s << "\n" ;
                                                break ;
                                    } else {
                                                cout << s [0] ;
                                                cout << (s.length () - 2) ;
                                                cout << s[(s.length ()) - 1] ;
                                                break ;
                                    }
                        } 
            }
            return t ;
}

int main () {
            int t ;
            cin >> t ;
            f (t) ;
            return 0 ;
}
